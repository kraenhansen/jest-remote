{
  "name": "jest-runner-remote-client",
  "version": "0.1.0",
  "description": "Run Jest tests anywhere - get reporting in your terminal",
  "bin": {
    "jest-runner-remote-client": "./cli.mjs"
  },
  "type": "commonjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "node": "./dist/node/index.js"
    }
  },
  "scripts": {
    "start": "wireit",
    "build": "wireit",
    "lint": "eslint"
  },
  "wireit": {
    "start": {
      "command": "./cli.js",
      "dependencies": ["build"]
    },
    "build": {
      "command": "tsc",
      "files": [
        "./src",
        "./tsconfig.json"
      ],
      "output": [
        "./dist"
      ]
    }
  },
  "keywords": [
    "jest",
    "jest-runner",
    "remote"
  ],
  "author": "Kr√¶n Hansen <mail@kraenhansen.dk>",
  "license": "ISC",
  "dependencies": {
    "events": "^3.3.0",
    "isomorphic-ws": "^5.0.0",
    "typed-emitter": "^2.1.0",
    "ws": "^8.13.0"
  }
}
